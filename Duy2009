import time
import sys

def delay_print(text, delay=0.1):
    """In t·ª´ng k√Ω t·ª± v·ªõi ƒë·ªô tr·ªÖ nh·∫•t ƒë·ªãnh ƒë·ªÉ t·∫°o hi·ªáu ·ª©ng"""
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(delay)

def main():
    # M√†n h√¨nh ch√†o m·ª´ng
    print("\033c", end="")  # X√≥a m√†n h√¨nh (works for Linux/Mac)

    # Thi·∫øt k·∫ø thi·ªáp
    delay_print("*******************************\n", 0.1)
    delay_print("*                             *\n", 0.1)
    delay_print("*   Chuc Mung Sinh Nhat Duy!  *\n", 0.1)
    delay_print("*                             *\n", 0.1)
    delay_print("*******************************\n", 0.1)

    # Th√™m kho·∫£ng tr·∫Øng
    print("\n\n")
    
    # Hi·ªáu ·ª©ng ch·ªØ "üéÇ"
    delay_print("       Happy Birthday Duy! üéÇ\n", 0.2)
    
    # Ch√∫c m·ª´ng sinh nh·∫≠t
    delay_print("\nChuc Duy mot ngay sinh nhat vui ve,\n", 0.1)
    delay_print("tran ngap hanh phuc, va yen vui!\n", 0.1)
    
    # S·ªë tu·ªïi
    print("\nDuy da 15 tuoi !!!\n")
    delay_print("********************************\n", 0.1)
    delay_print("*                              *\n", 0.1)
    delay_print("*     Hy vong ban co mot        *\n", 0.1)
    delay_print("*    cuoc song tuyet voi!       *\n", 0.1)
    delay_print("*                              *\n", 0.1)
    delay_print("********************************\n", 0.1)

    # Hi·ªáu ·ª©ng k·∫øt th√∫c
    print("\nNhieu ni·ªÅm vui v√† ∆∞·ªõc m∆° s·∫Ω th√†nh c√¥ng!\n")

if __name__ == "__main__":
    main()
